{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"declaration": true,
		"allowJs": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "lib"
	},
	"include": [
		"src"
	],
	"typeRoots": [
		"node_modules/@types"
	]
}